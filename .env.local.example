# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Local Ollama (Primary - Day 1)
OLLAMA_BASE_URL=http://127.0.0.1:11434
OLLAMA_MODEL=qwen2.5:7b

# Optional Groq keys (used by assistant when Groq mode is selected, and by crop planner)
# GROQ_API_KEY=your_groq_api_key_here
# GROQ_MODEL=llama-3.3-70b-versatile

# Optional APIs
OPENWEATHER_API_KEY=your_openweather_api_key

# CDSE / Sentinel Hub (Day 2 satellite setup)
CDSE_CLIENT_ID=your_cdse_client_id
CDSE_CLIENT_SECRET=your_cdse_client_secret
CDSE_TOKEN_URL=https://identity.dataspace.copernicus.eu/auth/realms/CDSE/protocol/openid-connect/token

# Optional Day 3 voice pipeline (open-source, local-first)
VOICE_STT_PROVIDER=auto
WHISPER_CPP_BIN=/usr/local/bin/whisper-cli
WHISPER_CPP_MODEL=/absolute/path/to/ggml-small.bin
VOICE_TTS_PROVIDER=auto
VOICE_TTS_BIN=espeak-ng
VOICE_FFMPEG_BIN=ffmpeg
VOICE_MAX_AUDIO_BYTES=6291456
VOICE_MAX_AUDIO_SECONDS=45
